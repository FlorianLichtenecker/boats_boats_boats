<div class="boat-details">
  <h1><%= @boat.name %></h1>

  <% if @boat.images.attached? %>
    <div class="boat-images">
      <% @boat.images.each do |image| %>
        <%= cl_image_tag image.key, class: "boat-image" %>
      <% end %>

  <% else %>
    <p>No images attached.</p>
  <% end %>

<div class="booking-card">
      <h3>Book this Boat!</h3>
      <%= render "bookings/calendar"%>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
        </div>
      <% end %>
</div>
</div>
  <div class="boat-description">
    <h2>Specs</h2>
    <p>
      Length: <%= @boat.length %> meters<br>
      Width: <%= @boat.width %> meters<br>
      Height: <%= @boat.height %> meters
    </p>
  </div>

   <% if @boat.user == current_user %>
    <div class="boat-bookings">
      <h2>Bookings</h2>
    </div>
  <% end %>

<div class="reviews-section">
  <h2>Reviews</h2>
  <% @boat.reviews.each do |review| %>
    <div class="review">
      <p><strong>Rating:</strong> <%= render_stars(review.rating) %></p>
      <p><strong>Content:</strong> <%= review.content %></p>
      <p><strong>Created by:</strong> <%= review.user.email %></p>
    </div>
  <% end %>
</div>

    <div class="leave-review">
    <h2>Leave a Review</h2>
    <% if user_signed_in? %>
      <%= render 'reviews/review', boat: @boat, user: current_user %>
    <% else %>
      <p>Please log in to leave a review.</p>
    <% end %>
  </div>
</div>
