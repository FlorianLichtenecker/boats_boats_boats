<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
        <%= image_tag (@boat.image), width: 400, class: "img-fluid rounded-start" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @boat.title %></h5>
        <p class="card-text"><%= @boat.overview%></p>
        <p class="card-text"><small class="text-body-secondary"><%= @boat.rating%></small></p>
      </div>
    </div>
  </div>
</div>
